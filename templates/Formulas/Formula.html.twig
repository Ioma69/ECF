{% extends "base.html.twig" %}

{% block body %}
  <div class="container mt-3 mb-5">
    <div class="card vh-100 mt-5 borderColor">
      <div class="card-body custom-scrollbar shadow" style="overflow-y: auto;">
        <h2 class="text-center mt-3 mb-5 text-decoration-underline">Menu du Quai Antique</h2>
        {% for menu in menus %}
          <div class="row mb-5">
            <div class="col-md-12">
              <h4 class="card-title text-center">{{ menu.menuTitle }}</h4>
              <p class="card-text text-center">{{ menu.description }}</p>
              <p class="card-text text-center">{{ menu.price }} â‚¬</p>
              <hr class="custom-hr">
              {% for dishe in menuDishes[menu.id] %}
                <h5 class="card-title text-center">{{ dishe.title }}</h5>
              {% endfor %}
              <div class="d-flex justify-content-center">
                <a href="{{ path('delete-formula', {'id': menu.id}) }}" class="btn btn-sm ms-1 adminButton"> <i class="fas fa-trash"></i>Supprimer</a>
                <a href="{{ path('edit-formula', {'id': menu.id}) }}" class="btn btn-sm ms-1 adminButton"> <i class="fas fa-edit"></i>Modifier</a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

  {{ include('footer.html.twig') }}
{% endblock %}
