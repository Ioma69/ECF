{% block footer %}
<footer class="py-4 bg-dark text-white mt-auto">
<div class="bg-dark py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-4 d-flex flex-column">
                <h3 class="mb-3 d-flex justify-content-center">Horaires</h3>
                {% for schedule in schedules %}
                <i class="far fa-2x fa-clock me-1 mb-3 d-flex justify-content-center" style="color: #cba880;"></i>
                <p class="mb-1 d-flex justify-content-center text-center police"> Mardi au Dimanche de {{ schedule.openingNoon|date('H:i') }} à {{ schedule.closingNoon|date('H:i') }} et de {{ schedule.openingEvening|date('H:i') }} à {{ schedule.closingEvening|date('H:i') }}</p>
                {% if is_granted('ROLE_ADMIN') %}
                <div class="d-flex justify-content-center">
                <a href="{{ path('edit-schedule', {'id': schedule.id}) }}" class="btn btn-warning btn-sm mt-3">Modifier les horaires</a>
                </div>
                {% endif %}
                {% endfor %}
            </div>
            <div class="col-md-4 d-flex flex-column">
                <h3 class="mb-3 d-flex justify-content-center align-items-center mt-3 mt-md-0">Menu</h3>
                <ul class="list-unstyled d-flex justify-content-center align-items-center flex-column">
                  <li class="text-center"><a href="#" class="text-white text-decoration-none police"><i class="fa-regular fa-clipboard fa-2x" style="color: #cba880;"></i><br>Decouvrez nos menus</a></li>
                  <li class="text-center"><a href="#" class="text-white text-decoration-none police"><i class="fa-regular fa-star fa-2x mt-2" style="color: #cba880;"></i><br>Decouvrez notre carte</a></li>
                </ul>
            </div>
            <div class="col-md-4 mt-3 mt-sm-4 mt-md-0 d-sm-flex d-md-block flex-column flex-md-row">
                <h3 class="mb-3 d-flex justify-content-center">Contact</h3>
                <p class="mb-1 d-flex justify-content-center police mt-3 align-items-center flex-column flex-md-row"><i class="fa-regular fa-flag d-flex align-items-center me-1 fa-2x" style="color: #cba880;"></i> 123 Rue du Quai antique, 75000 Paris</p>
                <p class="mb-1 d-flex justify-content-center police mt-3 align-items-center flex-column flex-md-row"><i class="fas fa-phone d-flex align-items-center me-1 fa-2x" style="color: #cba880;"></i> +33 1 23 45 67 89</p>
                <p class="mb-1 d-flex justify-content-center align-items-center police mt-3 flex-column flex-md-row"><i class="fa-regular fa-envelope d-flex align-items-center me-1 fa-2x" style="color: #cba880;"></i> contact@quaiantique.com</p>
            </div>
        </div>
    </div>
</div>

    <div class="container text-center">
        <p class="mb-0">&copy; 2023 Quai Antique. Tous droits réservés.</p>
    </div>
</footer>
{% endblock %}



