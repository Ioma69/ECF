<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Quai Antique{% endblock %}</title>
       
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
            <link rel="stylesheet" href= {{asset('styles/style.css')}} type="text/css">
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
			
			

        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>
			<script src=" {{ asset('scripts/functions.js') }} "></script> 
			<script src=" {{ asset('scripts/app.js') }} "></script> 
        {% endblock %}
    </head>
    <body class= "d-flex flex-column">

{% block header %}
  <nav class="navbar navbar-expand-lg color shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand text-white" href="#">Quai Antique</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active text-white" aria-current="page" href="/">Accueil</a>
          </li>
          {% if ( app.user ) and ( is_granted('ROLE_ADMIN') ) %} 
            <!-- Vérifie que l'admin est bien connécté afin de procéder au CRUD -->
            <li class="nav-item">
              <a class="nav-link text-white" href="/Picdishes/upload">Upload</a>
            </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Admin
            </a>
            <ul class="dropdown-menu">
              <li>
                <a class="dropdown-item" href="/dishes/upload">Gérer la carte</a>
              </li>
              <li>
                <a class="dropdown-item" href="/menu/upload">Gérer les menus</a>
              </li>
              <li>
                <a class="dropdown-item" href="/schedule/upload">Gérer les horaires</a>
              </li>
              <li>
                <a class="dropdown-item" href="/Picdishes/upload">Gérer la galerie photo</a>
              </li>
            </ul>
          </li>
          {% endif %}
          <li class="nav-item">
            <a class="nav-link text-white" href="/formula">Nos menus</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="/menu">Notre carte</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="*">Réserver</a>
          </li>
        </ul>
        {% if app.user %}
          <div class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Bienvenue {{ app.user.email }}
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <li><a class="dropdown-item" href="/logout">Se déconnecter</a></li>
            </ul>
          </div>
        {% else %}
          <a href="/login" class="btn btn-outline-primary me-2">Se connecter</a>
          <a href="/register" class="btn btn-primary">S'inscrire</a>
        {% endif %}
      </div>
    </div>
  </nav>
{% endblock %}

{% block body %} 

{% endblock %}
   

 </body>
</html>
