{% extends "base.html.twig" %}

{% block main %}
<section class="mt-5 pt-3">
	<div class="container marginNavbar pt-5 mb-5 shadow p-4 responsiveForm ">
		{% for message in app.flashes('error') %}
			<div class="alert alert-danger mt-3" role="alert">
				{{ message }}
			</div>
		{% endfor %}
		<h1 class="text-center mb-5">Cr√©er un nouvel horaire</h1>
		{{ form_start(schedules, {'attr': {'class': 'row g-3 justify-content-center'}}) }}
		<div class="col-md-6">
			<div class="form-group">
				{{ form_label(schedules.openingNoon, 'Ouverture (midi)', {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(schedules.openingNoon, {'attr': {'class': 'form-control customForm border border-light'}}) }}
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">
				{{ form_label(schedules.closingNoon, 'Fermeture (midi)', {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(schedules.closingNoon, {'attr': {'class': 'form-control customForm border border-light'}}) }}
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">
				{{ form_label(schedules.openingEvening, 'Ouverture (soir)', {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(schedules.openingEvening, {'attr': {'class': 'form-control customForm border border-light'}}) }}
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">
				{{ form_label(schedules.closingEvening, 'Fermeture (soir)', {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(schedules.closingEvening, {'attr': {'class': 'form-control customForm border border-light'}}) }}
			</div>
		</div>
		<div class="col-12">
			<input type="submit" class="btn btnCustom" value="Publier l'horaire">
		</div>
		{{ form_end(schedules) }}
	</div>
</section>
{% endblock %}
