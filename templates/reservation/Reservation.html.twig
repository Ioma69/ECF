{% extends "base.html.twig" %}

{% block main %}
<div class="container mt-5 mb-5">
    <div class="card border-1 borderColor shadow mt-3 mb-5">
        <div class="card-body custom-scrollbar">
            <h2 class="text-center mb-5 mt-3 text-decoration-underline  mb-5">Réservations</h2>
                {% for reservation in reservations %}
                <div class="row justify-content-center">
                    <div class="col-sm-10 col-md-7 col-lg-4 mb-4">
                        <div class="card border-1 borderColor d-flex flex-column align-items-stretch">
                            <div class="card-body font-weight-bold">
                                {% for visitor in visitors %}
                                    {% if reservation.visitor is not null and visitor.id == reservation.visitor.id %}
                                        <p class="card-text text-center fw-bold">{{ visitor.name }}</p>
                                        <hr class="my-2">
                                    {% endif %}
                                {% endfor %}

                                {% for user in users %}
                                    {% if reservation.user is not null and user.id == reservation.user.id %}
                                        <p class="card-text text-center fw-bold">{{ user.name }}</p>
                                        <hr class="my-2">
                                    {% endif %}
                                {% endfor %}
                                <p class="card-title"><span class="fw-bold text-decoration-underline"> Date de la réservation:</span> {{ reservation.reservationDate|date('d-m-Y') }}</p>
                                <p class="card-title"><span class="fw-bold text-decoration-underline"> Heure de réservation:</span> {{ reservation.reservationHour|date('H:i:s') }}</p>
                                <p class="card-title"><span class="fw-bold text-decoration-underline"> Nombre de couverts:</span> {{ reservation.flatware }}</p>
                                {% if ( is_granted('ROLE_ADMIN') ) %}
                                    <div class="card-footer d-flex justify-content-center">
                                        <a href="{{ path('delete-reservations', {'id': reservation.id}) }}" class="btn btn-sm me-1 adminButton">
                                            <i class="fas fa-trash"></i>
                                            Supprimer</a>
                                        <a href="{{ path('edit-reservationsVisitor', {'id': reservation.id}) }}" class="btn btn-sm adminButton">
											<i class="fas fa-edit"></i>
											Modifier</a>
                                    </div>
								{% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
           
   

{% endblock %}

								
										
									
								

							
					
		
	
		
