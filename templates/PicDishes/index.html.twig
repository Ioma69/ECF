{% extends 'base.html.twig' %}


{% block body %}


<div class="d-flex justify-content-around flex-wrap mt-5">
  {% for picdishe in picdishes %}
    <div class="card text-white bg-secondary m-3" style="max-width: 18rem;">
      <img src="{{ asset('uploads/' ~ picdishe.image) }}" class="card-img-top rounded-circle" alt="{{ picdishe.title }}" height="300px" width="100px">
      <div class="card-img-overlay">
        <h5 class="card-title text-center">{{ picdishe.title }}</h5>
        {% if ( is_granted('ROLE_ADMIN') ) %}
        <div class="d-flex justify-content-center">
          <a href="{{ path('delete-picdishe', {'id': picdishe.id}) }}" class="btn btn-danger btn-sm me-1"><i class="fas fa-trash"></i></a>
          <a href="{{ path('edit-picdishe', {'id': picdishe.id}) }}" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
        </div>
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>

<div class="d-flex justify-content-center mt-5">
    {% if app.user %}
    <a href="{{ path('userReservation') }}" class="btn btn-primary btn-lg active" role="button" style="background-color: #ffac44; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">Réserver une table</a>
  {% else %}
    <a href="{{ path('addInfo') }}" class="btn btn-primary btn-lg active" role="button" style="background-color: #ffac44; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">Réserver une table</a>
  {% endif %}
</div>

{{ include('footer.html.twig') }}

{% endblock %}
