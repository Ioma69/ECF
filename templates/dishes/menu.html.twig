{% extends "base.html.twig" %}

{% block body %}
	<div class="container mt-5">
		<div class="card border-1 borderColor shadow mt-3">
			<div class="card-body custom-scrollbar">
				<h2 class="text-center mb-5 mt-3 text-decoration-underline">Carte du Quai Antique</h2>
				<div class="row justify-content-center">
					{% for dishe in dishes %}
						<div class="col-sm-10 col-md-7 col-lg-4 mb-4">
							<div class="card border-1 borderColor h-100 d-flex flex-column align-items-stretch">
								<div class="card-body font-weight-bold">
									<h5 class="card-title">{{ dishe.title }}</h5>
									<hr class="my-2">
									<p class="card-text">{{ dishe.description }}</p>
									<hr class="my-2">
									<p class="card-text font-weight-bold">
										Prix :
										{{ dishe.price }}
										€</p>
									<hr class="my-2">
									<p class="card-text text-center pt-3">{{ dishe.category.name }}</p>
								</div>
								{% if ( is_granted('ROLE_ADMIN') ) %}
									<div class="card-footer d-flex justify-content-center">
										<a href="{{ path('delete-dishes', {'id': dishe.id}) }}" class="btn btn-sm me-1 adminButton">
											<i class="fas fa-trash"></i>
											Supprimer</a>
										<a href="{{ path('edit-dishes', {'id': dishe.id}) }}" class="btn btn-sm adminButton">
											<i class="fas fa-edit"></i>
											Modifier</a>
									</div>
								{% endif %}
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
		<div class="d-flex justify-content-center mt-3 mb-5">
			<a href="/formula" class="btn btn btn-lg mt-5 btnCustom mb-3">
				Découvrez nos menus du moment !
			</a>
		</div>
	</div>

	{{ include('footer.html.twig') }}

{% endblock %}

