{% extends "base.html.twig" %}

{% block body %}

<div class="container mt-5 bg-white shadow p-5">
	<h1 class="text-center mb-5">Cr√©er un nouveau plat</h1>
	{{ form_start(dishes, {'attr': {'class': 'row g-3 justify-content-center'}}) }}
		{{ form_row(dishes.categories, {'attr': {'class': 'form-select mb-2'}}) }}
		{{ form_row(dishes.title, {'attr': {'class': 'form-control mb-2'}}) }}
